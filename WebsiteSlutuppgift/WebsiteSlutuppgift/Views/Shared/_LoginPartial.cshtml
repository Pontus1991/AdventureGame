@using Microsoft.AspNetCore.Identity
@using WebsiteSlutuppgift.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

    <!--Namnet på den som är inloggad-->
    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item link-background">
                <a class="nav-link text-danger middle" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Logged in as @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item link-background">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-danger middle">Logout</button>
                </form>
            </li>
        }


        <!--Loginknapp uppe i högra hörnet-->
        @if (!SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <form id="loginform" class="form-inline" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="login" type="submit" class="nav-link btn btn-link text-danger">Login</button>
                </form>
            </li>
        }

    </ul>
