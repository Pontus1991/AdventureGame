@model WebsiteSlutuppgift.Models.ViewModels.CreateBookingViewModel

<div class="text-center Background-Color col-md-4 minspecialform">
    <h1 class="text-center text-danger Background-Color">Please fill in the fields below</h1>
    <div class="text-center text-danger">
        <form asp-action="Create" method="post" class="text-center">
            <div class="form-group text-center">
                <label class="control-label">Name</label>
                <input class="form-control" asp-for="Booking.Booker" />
                <span asp-validation-for="Booking.Booker" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Lane</label>
                <select class="form-control" asp-for="Booking.TrackId"
                        asp-items="@(new SelectList(Model.Tracks, "Id","Name"))">
                    <option>Select track</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">From</label>
                <input class="form-control" asp-for="Booking.From" />
            </div>
            <div class="form-group">
                <label class="control-label">To</label>
                <input class="form-control" asp-for="Booking.To" />
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Reserve" />
                <a asp-action="Index">Back to List</a>
            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}