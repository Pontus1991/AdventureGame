@model WebsiteSlutuppgift.Models.ViewModels.CreateBookingViewModel

<div class="text-center Background-Color col-md-4">
    <h1 class="text-center text-danger Background-Color">Vänligen fyll i fälten nedan</h1>
    <div class="text-center text-danger">
        <form asp-action="Create" method="post" class="text-center">
            <div class="form-group text-center">
                <label class="control-label">Namn</label>
                <input class="form-control" asp-for="Booking.Booker" />
                <span asp-validation-for="Booking.Booker" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Bana</label>
                <select class="form-control" asp-for="Booking.TrackId"
                     asp-items="@(new SelectList(Model.Tracks, "Id","Name"))">
                    <option>Select track</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Från</label>
                <input class="form-control" asp-for="Booking.From" />
            </div>
            <div class="form-group">
                <label class="control-label">Till</label>
                <input class="form-control" asp-for="Booking.To" />
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Slutför" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}