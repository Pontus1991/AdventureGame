@{ 
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="row text-danger">
    <div class="offset-md-4 minspecialform"> 
        <div class="card login-logout-tab">
            <div class="card-header Background-Color">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a class="nav-link fas fa-sign-in-alt" href='/Identity/Account/Login'>Sign In</a>
                     </li>
                    <li class="nav-item">
                        <a class="nav-link fa fa-user-plus" aria-hidden="true" href='/Identity/Account/Register'> Sign Up</a>
                    </li>
                </ul>
            </div>
            <div class="card-content Background-Color">
                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    @RenderSection("Scripts", required: false)

<script>
    $(function () {
        var current = location.pathname;
        $('.nav-tabs li a').each(function () {
            var $this = $(this);
            if (current.indexOf($this.attr('hred')) !== -1) {
                $this.addClass('active');
            }
        })
    })       
</script>
}

